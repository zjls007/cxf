<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxrs="http://cxf.apache.org/jaxrs" 
	xmlns:util="http://www.springframework.org/schema/util" 
	xsi:schemaLocation=" http://www.springframework.org/schema/beans  
		http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://cxf.apache.org/jaxrs 
		http://cxf.apache.org/schemas/jaxrs.xsd
		http://www.springframework.org/schema/util 
		http://www.springframework.org/schema/util/spring-util-2.5.xsd">
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    <jaxrs:server id="jsonService" address="/">
        <jaxrs:serviceBeans>
            <ref bean="jsonRest"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>  
            <ref bean="jsonProvider"/>
    	</jaxrs:providers>  
    </jaxrs:server>
    <bean id="jsonRest" class="demo.webservice.service.rest.impl.JsonRestImpl"/>
    
    <util:list id="jsonKeys">
    	<value>childrens0</value>  
    	<value>childrens1</value>  
    	<value>childrens2</value>  
    </util:list>
	
	<bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
       <property name="dropRootElement" value="true"/>
<!--        <property name="serializeAsArray" value="false"/> -->
       <property name="arrayKeys" ref="jsonKeys"/>
       <property name="ignoreEmptyArrayValues" value="false"/> 
       <property name="dropElementsInXmlStream" value="false"/> 
    </bean>
</beans>
